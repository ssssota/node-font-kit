{
  "name": "node-font-kit",
  "version": "1.0.0-next.0",
  "description": "Node bindings to font-kit(Rust crate)",
  "main": "index.js",
  "repository": "https://github.com/ssssota/node-font-kit.git",
  "license": "MIT",
  "keywords": [
    "napi-rs",
    "NAPI",
    "N-API",
    "Rust",
    "node-addon",
    "node-addon-api"
  ],
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "napi": {
    "name": "node-font-kit",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "i686-pc-windows-msvc",
        "armv7-unknown-linux-gnueabihf",
        "aarch64-apple-darwin",
        "aarch64-linux-android",
        "x86_64-unknown-freebsd",
        "aarch64-unknown-linux-musl",
        "aarch64-pc-windows-msvc",
        "armv7-linux-androideabi"
      ]
    }
  },
  "engines": {
    "node": ">= 10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release --pipe \"prettier -w\"",
    "build:debug": "napi build --platform --pipe \"prettier -w\"",
    "format": "run-p -l \"format:*\"",
    "format:prettier": "prettier . --write",
    "format:rs": "cargo fmt",
    "format-check": "run-p -l \"format-check:*\"",
    "format-check:prettier": "prettier . --check",
    "format-check:rs": "cargo fmt -- --check",
    "lint": "run-p -l \"lint:*\"",
    "lint:eslint": "eslint . -c ./.eslintrc.yml",
    "lint:rs": "cargo clippy",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "vitest",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@napi-rs/cli": "^2.9.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chalk": "^5.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.3",
    "typescript": "^4.7.3",
    "vitest": "^0.15.1"
  },
  "packageManager": "yarn@3.2.1"
}
